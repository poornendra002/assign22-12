pipeline {
   agent { label 'slave3' }
   stages {
        stage('Build stage') {
            steps {  
                sh '''
                docker build -t poornendra/repo:$BUILD_NUMBER .
                docker run -d -p 9990:80 poornendra/repo:$BUILD_NUMBER 
                '''
            }
        }
        stage('login to dockerhub') {
            steps{
            withCredentials([usernameColonPassword(credentialsId: 'docker-latestpassword', variable: 'doc-passwd')]) {
   sh "docker login -u $doc-passwd --password-stdin"
}
      }             
        }
        stage('push image') {
            steps{
                sh 'docker push poornendra/repo:$BUILD_NUMBER'
            }
        }
}
}

