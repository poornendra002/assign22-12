pipeline {
   agent { label 'slave3' }
   stages {
        stage('Build stage') {
            steps {  
                sh '''
                docker build -t poornendra/repo:ngin .
                docker run -d --name nginassign -p 9900:80 poornendra/repo:ngin  
                '''
            }
        }
        stage('login to dockerhub') {
            steps{
            withCredentials([usernameColonPassword(credentialsId: 'docker-latestpassword', variable: 'doc-passwd')]) {
   sh "docker login -u username -p ${doc-passwd}"
}
      }             
        }
        stage('push image') {
            steps{
                sh 'docker push poornendra/repo:ngin'
            }
        }
}
}

